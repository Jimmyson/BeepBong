@page
@model BeepBong.Web.Pages.Programmes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Programme</h4>
<hr />

@{ await Html.RenderPartialAsync("_ModelStateError"); }

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-4">
            <input type="hidden" asp-for="Programme.ProgrammeId" />
            <div class="form-group">
                <label asp-for="Programme.Name" class="control-label"></label>
                <input asp-for="Programme.Name" class="form-control" />
                <span asp-validation-for="Programme.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Programme.AirDate" class="control-label"></label>
                <input asp-for="Programme.AirDate" class="form-control" />
                <span asp-validation-for="Programme.AirDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Programme.ChannelId" class="control-label"></label>
                <select asp-for="Programme.ChannelId" class="form-control selectpicker" data-live-search="true" data-size="10" asp-items="ViewBag.ChannelIds" ></select>
                <span asp-validation-for="Programme.ChannelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Programme.TrackListIds" class="control-label"></label>
                <select asp-for="Programme.TrackListIds" class="form-control selectpicker" data-live-search="true" data-size="10" multiple asp-items="ViewBag.TrackListIds" ></select>
                <span asp-validation-for="Programme.TrackListIds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
        <div class="col-sm-8">
            <div>
                <label>Image Control</label>
                <div class="input-group mb-3 btn-group">
                    <button id="imageReset" disabled class="btn btn-outline-warning" type="button" onclick="resetImage()">
                        <span>
                            <svg class="i"><use xlink:href="#i-reload" /></svg>
                            Reset Image Form
                        </span>
                    </button>
                    <button id="imageClear" class="btn btn-outline-danger" type="button" onclick="clearImage()">
                        <span>
                            <svg class="i"><use xlink:href="#i-trash" /></svg>
                            Remove Image
                        </span>
                    </button>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Programme.ImageUpload"></label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroupFileAddon01">
                            <svg class="i"><use xlink:href="#i-photo" /></svg>
                        </span>
                    </div>
                    <div class="custom-file">
                        <input class="custom-file-input" asp-for="Programme.ImageUpload" accept="image/png, image/jpeg" aria-describedby="inputGroupFileAddon01" onchange="updateLabel()"/>
                        <label class="custom-file-label" id="Programme_ImageUpload_Label">Choose file...</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>Current Logo</label><br/>
                @if (Model.Programme.ImageId == null) {
                    <i class="text-muted">No logo available</i>
                }
                else
                {
                    <img id="Programme_Image" src="/Image?id=@Model.Programme.ImageId" width="auto" height="360px"/>
                }
                <input type="hidden" asp-for="Programme.ImageId" />
                <input type="hidden" asp-for="Programme.ImageIdChange" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/js/programmeImageEdit.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
