@page
@model BeepBong.Web.Pages.Programmes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Programme</h4>
<hr />

@{ await Html.RenderPartialAsync("_ModelStateError"); }

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Programme.Name" class="control-label"></label>
                    <input asp-for="Programme.Name" class="form-control" />
                    <span asp-validation-for="Programme.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Programme.AirDate" class="control-label"></label>
                    <input asp-for="Programme.AirDate" class="form-control" />
                    <span asp-validation-for="Programme.AirDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Programme.ChannelId" class="control-label"></label>
                    <select asp-for="Programme.ChannelId" class="form-control selectpicker" data-live-search="true" data-size="10" asp-items="ViewBag.ChannelIds" ></select>
                    <span asp-validation-for="Programme.ChannelId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Programme.TrackListIds" class="control-label"></label>
                    <select asp-for="Programme.TrackListIds" class="form-control selectpicker" data-live-search="true" data-size="10" multiple asp-items="ViewBag.TrackListIds" ></select>
                    <span asp-validation-for="Programme.TrackListIds" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <label asp-for="Programme.ImageUpload"></label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroupFileAddon01">
                                <svg class="i"><use xlink:href="#i-photo" /></svg>
                            </span>
                        </div>
                        <div class="custom-file">
                            <input class="custom-file-input" asp-for="Programme.ImageUpload" accept="image/png, image/jpeg" aria-describedby="inputGroupFileAddon01" onchange="updateLabel()"/>
                            <label class="custom-file-label" id="Programme_LogoUpload_Label">Choose file...</label>
                        </div>
                        <div class="input-group-append">
                            <button class="btn btn-outline-danger" type="button" onclick="clearImage()">
                                <span>
                                    <svg class="i"><use xlink:href="#i-trash" /></svg>
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div>
            <a asp-page="./Index">Back to List</a>
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/js/programmeImageCreate.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
