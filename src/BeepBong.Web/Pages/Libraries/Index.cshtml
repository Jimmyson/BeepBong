@page
@model BeepBong.Web.Pages.Libraries.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

@{ await Html.RenderPartialAsync("_PageTabs", Model.Library); }

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Library[0].AlbumName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Library[0].Label)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Library[0].Catalog)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Library[0].MBID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Library) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Label)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Catalog)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MBID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.LibraryId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.LibraryId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.LibraryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@{ await Html.RenderPartialAsync("_PageTabs", Model.Library); }
