@page
@model BeepBong.Web.Pages.Reports.LibrarySampleModel
@using BeepBong.Web.ViewModel
@using BeepBong.Application.ViewModels.Report

@{
    ViewData["Title"] = "Library with Samples Report";
	var pageRouting = new PageTabsViewModel<LibrarySampleViewModel>()
		{
			Pagination = Model.LibrarySample,
		};
}

<h1>Library with Samples Report</h1>

@{ await Html.RenderPartialAsync("_PageTabs", pageRouting); }

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LibrarySample.First().TrackName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LibrarySample.First().SampleId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LibrarySample) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TrackName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SampleId)
            </td>
            <td>
                <a asp-page="../Samples/Edit" asp-route-id="@item.SampleId">Edit</a> |
                <!-- <a asp-page="./Details" asp-route-id="@item.SampleId">Details</a>| -->
                <a asp-page="../Samples/Delete" asp-route-id="@item.SampleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@{ await Html.RenderPartialAsync("_PageTabs", pageRouting); }
