@page
@model MyApp.Namespace.OrphanedTrackListModel

@{
    ViewData["Title"] = "Orphaned Track Lists Report";
}

<h1>Orphaned Track Lists Report</h1>

@{ await Html.RenderPartialAsync("_PageTabs", Model.TrackLists); }

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TrackLists.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrackLists.First().Composer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrackLists.First().Library)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrackLists.First().TrackCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TrackLists) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Composer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Library)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrackCount)
            </td>
            <td>
                <a asp-page="../TrackLists/Edit" asp-route-id="@item.TrackListId">Edit</a> |
                <!-- <a asp-page="../TrackLists/Details" asp-route-id="@item.TrackListId">Details</a>| -->
                <a asp-page="../TrackLists/Delete" asp-route-id="@item.TrackListId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@{ await Html.RenderPartialAsync("_PageTabs", Model.TrackLists); }
