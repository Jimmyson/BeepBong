@page
@model BeepBong.Web.Pages.TrackLists.IndexModel
@using BeepBong.Web.ViewModel
@using BeepBong.Application.ViewModels

@{
    ViewData["Title"] = "Index";
	var pageRouting = new PageTabsViewModel<TrackListIndexViewModel>()
		{
			Pagination = Model.TrackList,
		};
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

@{ await Html.RenderPartialAsync("_PageTabs", pageRouting); }

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TrackList[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrackList[0].Composer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrackList[0].Library)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrackList[0].ProgrammeCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrackList[0].TrackCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TrackList) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Composer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Library)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProgrammeCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrackCount)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TrackListId">Edit</a> |
                <!--<a asp-page="./Details" asp-route-id="@item.TrackListId">Details</a> | -->
                <a asp-page="./Delete" asp-route-id="@item.TrackListId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@{ await Html.RenderPartialAsync("_PageTabs", pageRouting); }
