@page
@model BeepBong.Web.Pages.TrackLists.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TrackList</h4>
<hr />

@{ await Html.RenderPartialAsync("_ModelStateError"); }

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TrackList.Name" class="control-label"></label>
                <input asp-for="TrackList.Name" class="form-control" />
                <span asp-validation-for="TrackList.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrackList.Composer" class="control-label"></label>
                <input asp-for="TrackList.Composer" class="form-control" />
                <span asp-validation-for="TrackList.Composer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrackList.Library" class="control-label"></label>
                <input asp-for="TrackList.Library" class="form-control" />
                <span asp-validation-for="TrackList.Library" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrackList.Programmes" class="control-label"></label>
                <select asp-for="TrackList.Programmes" class="form-control selectpicker" data-live-search="true" data-size="10" multiple asp-items="ViewBag.ProgrammeIds" ></select>
                <span asp-validation-for="TrackList.Programmes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
    </div>
</form>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/js/TrackListCreate.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
